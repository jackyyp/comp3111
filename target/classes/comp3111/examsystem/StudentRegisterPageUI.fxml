<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      style="-fx-background-repeat: stretch;-fx-background-position: center center;" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600" prefWidth="600" spacing="20.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp3111.examsystem.controller.StudentRegisterController">
    <children>
        <Label fx:id="titleLbl" text="Student Register">
            <VBox.margin>
                <Insets top="100.0"/>
            </VBox.margin>
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Region prefHeight="10.0" prefWidth="600.0"/>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints halignment="LEFT"/>
            </columnConstraints>
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="usernameTxt" promptText="Enter your username" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="nameTxt" promptText="Enter your name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ComboBox fx:id="genderComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="ageTxt" promptText="Enter your age" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="departmentTxt" promptText="Enter your department" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <PasswordField fx:id="passwordTxt" promptText="Enter your password" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <PasswordField fx:id="confirmPasswordTxt" promptText="Confirm your password" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        </GridPane>
        <!-- Error message label -->
        <Label fx:id="errorMessageLbl" text="Error: Please check your inputs." style="-fx-text-fill: red;" visible="false"/>
        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="600.0" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#close" text="Close"/>
                <Button mnemonicParsing="false" onAction="#register" text="Register"/>
            </children>
        </HBox>
    </children>
</VBox>
