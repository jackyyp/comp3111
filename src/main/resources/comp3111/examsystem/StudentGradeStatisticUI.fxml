<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="493.0" prefWidth="1140.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp3111.examsystem.controller.StudentGradeStatisticController">
   <children>
      <Label text="Grade Statistics">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" prefHeight="61.0" prefWidth="1140.0">
         <children>
            <Label text="Course: ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
              <ComboBox fx:id="courseComboBox" prefWidth="200.0">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <SplitPane dividerPositions="0.5">
         <items>
            <TableView fx:id="gradeTable" prefHeight="355.0" prefWidth="570.0">
                <columns>
                    <TableColumn fx:id="courseColumn" prefWidth="100.0" text="Course" />
                    <TableColumn fx:id="examColumn" prefWidth="100.0" text="Exam" />
                    <TableColumn fx:id="scoreColumn" prefWidth="100.0" text="Score" />
                    <TableColumn fx:id="fullScoreColumn" prefWidth="100.0" text="Full Score" />
                    <TableColumn fx:id="timeColumn" prefWidth="100.0" text="Time" />
                </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <BarChart fx:id="gradeChart" animated="false" barGap="0.0" prefHeight="300.0" prefWidth="560.0">
                <xAxis>
                    <CategoryAxis label="Exam" fx:id="xAxis" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" label="Score" />
                </yAxis>
            </BarChart>
         </items>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </SplitPane>
   </children>
</VBox>
