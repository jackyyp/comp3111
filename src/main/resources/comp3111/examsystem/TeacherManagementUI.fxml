<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="600" prefWidth="1023.0"
      style="-fx-background-repeat: stretch;-fx-background-position: center center;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="comp3111.examsystem.controller.TeacherManagementController">
    <HBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <children>
            <Label text="Username:" />
            <TextField fx:id="usernameFilter" prefWidth="150.0" />
            <Label text="Name:" />
            <TextField fx:id="nameFilter" prefWidth="150.0" />
            <Label text="Department:" />
            <TextField fx:id="departmentFilter" prefWidth="150.0" />
            <Button mnemonicParsing="false" text="Reset" onAction="#resetFilter" />
            <Button mnemonicParsing="false" text="Filter" onAction="#filterTeachers" />
        </children>
    </HBox>

    <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS" >
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <children>
            <TableView fx:id="teacherTable" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="usernameColumn" text="Username" />
                    <TableColumn fx:id="nameColumn" text="Name" />
                    <TableColumn fx:id="genderColumn" text="Gender" />
                    <TableColumn fx:id="ageColumn" text="Age" />
                    <TableColumn fx:id="positionColumn" text="Position" />
                    <TableColumn fx:id="departmentColumn" text="Department" />
                    <TableColumn fx:id="passwordColumn" text="Password" />
                </columns>
            </TableView>
            <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                </padding>
                <children>
                    <Label text="Username:" />
                    <TextField fx:id="usernameField" />
                    <Label text="Name:" />
                    <TextField fx:id="nameField" />
                    <Label text="Gender:" />
                    <ComboBox fx:id="genderComboBox" />
                    <Label text="Age:" />
                    <TextField fx:id="ageField" />
                    <Label text="Position:" />
                    <TextField fx:id="positionField" />
                    <Label text="Department:" />
                    <TextField fx:id="departmentField" />
                    <Label text="Password:" />
                    <TextField fx:id="passwordField" />
                    <Label fx:id="errorMessageLbl" text="" visible="false" />
                </children>
            </VBox>
        </children>
    </HBox>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <children>
            <Button mnemonicParsing="false" text="Delete" onAction="#deleteTeacher" />
            <Button mnemonicParsing="false" text="Add" onAction="#addTeacher" />
            <Button mnemonicParsing="false" text="Update" onAction="#updateTeacher" />
        </children>
    </HBox>
</VBox>