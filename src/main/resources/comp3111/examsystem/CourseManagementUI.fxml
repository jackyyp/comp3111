<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="600" prefWidth="1023.0"
      style="-fx-background-repeat: stretch;-fx-background-position: center center;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="comp3111.examsystem.controller.CourseManagementController">
    <HBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <children>
            <Label text="Course ID:" />
            <TextField fx:id="courseIdFilter" prefWidth="150.0" />
            <Label text="Course Name:" />
            <TextField fx:id="courseNameFilter" prefWidth="150.0" />
            <Label text="Department:" />
            <TextField fx:id="departmentFilter" prefWidth="150.0" />
            <Button mnemonicParsing="false" text="Reset" onAction="#resetFilter" />
            <Button mnemonicParsing="false" text="Filter" onAction="#filterCourses" />
        </children>
    </HBox>

    <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS" >
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <children>
            <TableView fx:id="courseTable" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="courseIdColumn" text="Course ID" />
                    <TableColumn fx:id="courseNameColumn" text="Course Name" />
                    <TableColumn fx:id="departmentColumn" text="Department" />
                </columns>
            </TableView>
            <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                </padding>
                <children>
                    <Label text="Course ID:" />
                    <TextField fx:id="courseIdField" />
                    <Label text="Course Name:" />
                    <TextField fx:id="courseNameField" />
                    <Label text="Department:" />
                    <TextField fx:id="departmentField" />
                    <Label fx:id="errorMessageLbl" text="" visible="false" />
                </children>
            </VBox>
        </children>
    </HBox>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <children>
            <Button mnemonicParsing="false" text="Delete" onAction="#deleteCourse" />
            <Button mnemonicParsing="false" text="Add" onAction="#addCourse" />
            <Button mnemonicParsing="false" text="Update" onAction="#updateCourse" />
        </children>
    </HBox>
</VBox>